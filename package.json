{
  "name": "create-new-package",
  "version": "0.0.0",
  "description": "",
  "repository": "https://github.com/gfmio/create-new-package",
  "author": {
    "email": "npm@gfm.io",
    "name": "Frédérique Mittelstaedt",
    "url": "https://www.gfm.io"
  },
  "license": "MIT",
  "private": false,
  "bin": "dist/bin/create-new-package.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-p build:bundle:lib build:bundle:cli build:compile:cjs build:compile:es build:compile:dts build:readme build:license build:package-json",
    "build:bundle:lib": "yarn ts-pkg bundle --cjs --es --dts",
    "build:bundle:cli": "yarn ts-pkg bundle -e src/bin/create-new-package.ts --cjs dist/bin/create-new-package.js",
    "build:compile:cjs": "yarn ts-pkg compile --cjs -o dist/lib",
    "build:compile:es": "yarn ts-pkg compile --es -e .mjs -o dist/lib",
    "build:compile:dts": "yarn ts-pkg compile --dts -o dist/lib",
    "build:package-json": "yarn ts-pkg create-package-json --public",
    "build:readme": "mkdir -p dist && cp README.md dist",
    "build:license": "mkdir -p dist && cp LICENSE dist",
    "clean:dist": "rimraf dist",
    "prebuild": "yarn clean:dist",
    "publish": "yarn publish --no-git-tag-version dist && yarn ts-pkg update-package-json -s dist/package.json -d package.json -f version",
    "create-new-package": "ts-node ./src/bin/create-new-package.ts",
    "test:integration": "cross-env TMP_DIR=./out run-s clean:out test:integration:create test:integration:install test:integration:build test:integration:lint test:integration:test",
    "test:integration:clean": "rimraf $TMP_DIR",
    "test:integration:create": "yarn create-new-package ./out",
    "test:integration:install": "cd ./out && yarn install",
    "test:integration:build": "cd ./out && yarn build",
    "test:integration:lint": "cd ./out && yarn lint",
    "test:integration:test": "cd ./out && yarn test"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/js-yaml": "^3.12.3",
    "@types/mustache": "^4.0.1",
    "@types/node": "^13.11.1",
    "@types/prettier": "^2.0.0",
    "@types/shelljs": "^0.8.7",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "ts-pkg-scripts": "^0.2.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.3",
    "commander": "^5.1.0",
    "enquirer": "^2.3.5",
    "file-tree-writer": "^1.0.1",
    "fluent-object-builder": "^1.0.1",
    "inquirer": "^7.1.0",
    "js-yaml": "^3.13.1",
    "license": "^1.0.3",
    "mustache": "^4.0.1",
    "prettier": "^2.0.4",
    "shelljs": "^0.8.3",
    "tslib": "^1.11.2",
    "typed-jsx": "^0.1.1"
  }
}
